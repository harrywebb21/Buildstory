/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* scrollbar */

::-webkit-scrollbar {
	width: 8px;
}

::-webkit-scrollbar-track {
	background: #020617;
}

::-webkit-scrollbar-thumb {
	background: #334155;
	border-radius: 10px;
}

::-webkit-scrollbar-thumb:hover {
	background: #86efac;
}

html {
	scroll-behavior: smooth;
	overflow-x: hidden;
}
